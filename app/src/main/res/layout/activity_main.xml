<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Display mejorado -->
    <EditText
        android:id="@+id/etDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/display_background"
        android:focusable="false"
        android:gravity="end|center_vertical"
        android:hint="0"
        android:textColorHint="#888888"
        android:inputType="none"
        android:lines="1"
        android:padding="28dp"
        android:textColor="#222222"
        android:textSize="52sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Fila 1: C y Backspace -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:backgroundTint="#FA8112"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="C"
            android:textColor="#222222"
            android:textSize="26sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="⌫"
            android:textColor="#222222"
            android:textSize="28sp"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <!-- Fila 2: √, 7, 8, 9, M+ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSqrt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_sqrt"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:iconPadding="0dp"
            app:iconSize="28dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="7"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="8"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="9"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FA8112"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="M+"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <!-- Fila 3: x², 4, 5, 6, M- -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSquare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_square"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:iconPadding="0dp"
            app:iconSize="32dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="4"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="5"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="6"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FA8112"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="M-"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <!-- Fila 4: ×, 1, 2, 3, + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="×"
            android:textColor="#222222"
            android:textSize="26sp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="1"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="2"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="3"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"
            android:textColor="#222222"
            android:textSize="26sp"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <!-- Fila 5: ÷, 0, ., =, - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="÷"
            android:textColor="#222222"
            android:textSize="26sp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="0"
            android:textColor="#222222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FAF3E1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="."
            android:textColor="#222222"
            android:textSize="28sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FA8112"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="="
            android:textColor="#222222"
            android:textSize="26sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F5E7C6"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="-"
            android:textColor="#222222"
            android:textSize="28sp"
            app:cornerRadius="12dp"/>
    </LinearLayout>

</LinearLayout>